<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.payment.OrderDetailsActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_color"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:fontFamily="@font/montserrat_medium"
            android:text="@string/your_oder_status"
            android:textColor="@color/text_heading_light"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/montserrat_regular"
            android:text="March 3, 2023"
            android:textColor="@color/text_light"
            android:textSize="12sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginTop="20dp"
        android:background="@color/divider_light_5" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/montserrat_regular"
            android:text="@string/order_id_"
            android:textColor="@color/text_light"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/textView"
            android:fontFamily="@font/montserrat_medium"
            android:text="SF12003"
            android:textColor="@color/text_heading_light"
            android:textSize="16sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/montserrat_regular"
            android:text="@string/order_description"
            android:textColor="@color/text_light"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/textView2"
            android:fontFamily="@font/montserrat_medium"
            android:text="SEVIS/DS2019"
            android:textColor="@color/text_heading_light"
            android:textSize="16sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginTop="20dp"
        android:background="@color/divider_light_5" />


    <!--    <com.baoyachi.stepview.VerticalStepView-->
    <!--        android:id="@+id/step_view"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_marginHorizontal="10dp"-->
    <!--        android:layout_marginTop="20dp"/>-->


    <!--    <com.imcloudwu.android.component.VerticalStepView-->
    <!--        android:id="@+id/verticalStepView"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        app:textColor="@color/teal_200"-->
    <!--        app:textSize="24sp" />-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="40dp">


        <ImageView
            android:id="@+id/step1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/gray_circle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="@string/payment_pending"
            android:textColor="@color/text_heading_light"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/step1"
            app:layout_constraintStart_toEndOf="@id/step1"
            app:layout_constraintTop_toTopOf="@id/step1" />

        <View
            android:id="@+id/view1"
            android:layout_width="3dp"
            android:layout_height="50dp"
            android:background="@color/light_green"
            app:layout_constraintEnd_toEndOf="@id/step1"
            app:layout_constraintStart_toStartOf="@id/step1"
            app:layout_constraintTop_toBottomOf="@+id/step1" />


        <ImageView
            android:id="@+id/step2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/gray_circle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="@string/payment_confirmed"
            android:textColor="@color/text_heading_light"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/step2"
            app:layout_constraintStart_toEndOf="@id/step2"
            app:layout_constraintTop_toTopOf="@id/step2" />

        <View
            android:id="@+id/view2"
            android:layout_width="3dp"
            android:layout_height="50dp"
            android:background="@color/light_green"
            app:layout_constraintEnd_toEndOf="@id/step2"
            app:layout_constraintStart_toStartOf="@id/step2"
            app:layout_constraintTop_toBottomOf="@+id/step2" />

        <ImageView
            android:id="@+id/step3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/gray_circle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="@string/order_in_process"
            android:textColor="@color/text_heading_light"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/step3"
            app:layout_constraintStart_toEndOf="@id/step3"
            app:layout_constraintTop_toTopOf="@id/step3" />

        <View
            android:id="@+id/view3"
            android:layout_width="3dp"
            android:layout_height="50dp"
            android:background="@color/light_green"
            app:layout_constraintEnd_toEndOf="@id/step3"
            app:layout_constraintStart_toStartOf="@id/step3"
            app:layout_constraintTop_toBottomOf="@+id/step3" />

        <ImageView
            android:id="@+id/step4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/gray_circle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view3" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="@string/order_completed"
            android:textColor="@color/text_heading_light"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/step4"
            app:layout_constraintStart_toEndOf="@id/step4"
            app:layout_constraintTop_toTopOf="@id/step4" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/downloadReceiptBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/primary_button"
            android:fontFamily="@font/montserrat_regular"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:text="@string/download_receipt"
            android:textAllCaps="false"
            android:visibility="invisible"
            app:backgroundTint="@null"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@id/downloadReceiptBtn"
            app:layout_constraintEnd_toEndOf="@id/downloadReceiptBtn"
            app:layout_constraintStart_toStartOf="@id/downloadReceiptBtn"
            app:layout_constraintTop_toTopOf="@id/downloadReceiptBtn" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/rateUsTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/montserrat_regular"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:paddingHorizontal="10dp"
        android:text="@string/rate_us"
        android:textColor="@color/text_light"
        android:textSize="16sp"
        android:visibility="invisible" />

</LinearLayout>