<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.fragment.account.FAQsFragment">

    <TextView
        android:id="@+id/question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="20dp"
        android:drawablePadding="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="center"
        android:text="@string/frequently_asked_questions"
        android:textColor="@color/header2"
        android:textSize="16sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/faqsRV"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@id/questionGuide"
        app:layout_constraintTop_toBottomOf="@id/question"/>

    <TextView
        android:id="@+id/questionGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:drawablePadding="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@id/chatBtn"
        app:layout_constraintStart_toStartOf="@id/chatBtn"
        app:layout_constraintEnd_toEndOf="@id/chatBtn"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="center"
        android:text="@string/was_this_helpful_no_chat_with_us"
        android:textColor="@color/header2"
        android:textSize="16sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/chatBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/primary_button"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:text="@string/chat"
        android:textAllCaps="false"
        app:backgroundTint="@null" />


</androidx.constraintlayout.widget.ConstraintLayout>