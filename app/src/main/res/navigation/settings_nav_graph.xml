<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/account_nav_graph"
    app:startDestination="@id/profileFragment">

    <fragment
        android:id="@+id/profileFragment"
        android:name="tech.hackcity.educarts.ui.fragment.account.ProfileFragment"
        android:label="Profile">
        <action
            android:id="@+id/action_profileFragment_to_editProfileFragment"
            app:destination="@id/editProfileFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_profileFragment_to_addressBookFragment"
            app:destination="@id/addressBookFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/editProfileFragment"
        android:name="tech.hackcity.educarts.ui.fragment.account.EditProfileFragment"
        android:label="Edit Profile" />

    <fragment
        android:id="@+id/addressBookFragment"
        android:name="tech.hackcity.educarts.ui.fragment.account.AddressBookFragment"
        android:label="Address Book">
        <action
            android:id="@+id/action_addressBookFragment_to_addAddressBookFragment"
            app:destination="@id/addAddressBookFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_addressBookFragment_to_editAddressBookFragment"
            app:destination="@id/editAddressBookFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
    </fragment>

    <fragment
        android:id="@+id/addAddressBookFragment"
        android:name="tech.hackcity.educarts.ui.fragment.account.AddAddressBookFragment"
        android:label="Add Address ">
        <action
            android:id="@+id/action_addAddressBookFragment_to_addressBookFragment"
            app:destination="@id/addressBookFragment"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_right"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_left"
            app:popUpTo="@id/addressBookFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/editAddressBookFragment"
        android:name="tech.hackcity.educarts.ui.fragment.account.EditAddressBookFragment"
        android:label="Edit Address" >
        <argument
            android:name="address"
            app:argType="tech.hackcity.educarts.data.model.AddressBook" />
        <action
            android:id="@+id/action_editAddressBookFragment_to_addressBookFragment"
            app:destination="@id/addressBookFragment"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_right"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_left"
            app:popUpTo="@id/addressBookFragment"
            app:popUpToInclusive="true"/>

    </fragment>

    <fragment
        android:id="@+id/identityVerificationFragment"
        android:name="tech.hackcity.educarts.ui.fragment.account.IdentityVerificationFragment"
        android:label="Identity Verification" >
    </fragment>

    <fragment
        android:id="@+id/faqsFragment"
        android:name="tech.hackcity.educarts.ui.fragment.account.FAQsFragment"
        android:label="FAQs" >
    </fragment>

    <fragment
        android:id="@+id/passwordAndPinFragment"
        android:name="tech.hackcity.educarts.ui.fragment.account.PasswordAndPinFragment"
        android:label="Password and PIN" >
        <action
            android:id="@+id/action_passwordAndPinFragment_to_createPinFragment"
            app:destination="@id/createPinFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
        <action
            android:id="@+id/action_passwordAndPinFragment_to_changePinFragment"
            app:destination="@id/changePinFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
    </fragment>

    <fragment
        android:id="@+id/createPinFragment"
        android:name="tech.hackcity.educarts.ui.fragment.account.CreatePinFragment"
        android:label="PIN" >
    </fragment>

    <fragment
        android:id="@+id/changePinFragment"
        android:name="tech.hackcity.educarts.ui.fragment.account.ChangePinFragment"
        android:label="Change PIN" >
        <action
            android:id="@+id/action_changePinFragment_to_forgotPinFragment"
            app:destination="@id/forgotPinFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
    </fragment>

    <fragment
        android:id="@+id/forgotPinFragment"
        android:name="tech.hackcity.educarts.ui.fragment.account.ForgotPinFragment"
        android:label="Forgot PIN" >
        <action
            android:id="@+id/action_forgotPinFragment_to_OTPFragment"
            app:destination="@id/OTPFragment" />
    </fragment>

    <fragment
        android:id="@+id/OTPFragment"
        android:name="tech.hackcity.educarts.ui.fragment.auth.OTPFragment"
        android:label="Verification"
        tools:layout="@layout/fragment_otp" >
        <action
            android:id="@+id/action_OTPFragment_to_createPinFragment"
            app:destination="@id/createPinFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
        <argument
            android:name="destination"
            app:argType="string" />
    </fragment>


</navigation>